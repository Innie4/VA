# Development Environment Configuration
# Copy this file to .env and update the values for your local development

# Application
NODE_ENV=development
PORT=3001
HOST=localhost

# Database
# For development with SQLite (easier setup)
DATABASE_URL="file:./dev.db"
# For development with PostgreSQL (uncomment below and comment SQLite)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/va_chat_dev?schema=public"

# Redis (optional for development)
# REDIS_URL="redis://localhost:6379"

# JWT Configuration (change these in production!)
JWT_SECRET="dev-jwt-secret-change-in-production-min-32-characters"
JWT_REFRESH_SECRET="dev-refresh-secret-change-in-production-min-32-characters"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# OpenAI API (required - get from https://platform.openai.com/api-keys)
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS=true

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=50

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,text/plain,application/pdf"

# Logging
LOG_LEVEL="debug"
LOG_FILE="./logs/app.log"
LOG_MAX_SIZE="20m"
LOG_MAX_FILES="14d"

# Security (change these in production!)
SESSION_SECRET="dev-session-secret-change-in-production-min-32-characters"
BCRYPT_ROUNDS=10
CSRF_SECRET="dev-csrf-secret-change-in-production"

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# WebSocket
SOCKET_IO_CORS_ORIGIN="http://localhost:3000"
SOCKET_IO_TRANSPORTS="websocket,polling"

# Clustering (disabled for development)
CLUSTER_ENABLED=false
WORKER_PROCESSES=1

# SSL/TLS (disabled for development)
SSL_ENABLED=false

# Database Connection Pool
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5
DATABASE_POOL_IDLE_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=100

# Feature Flags
FEATURE_VOICE_INPUT=true
FEATURE_FILE_UPLOAD=true
FEATURE_ANALYTICS=false
FEATURE_ADMIN_PANEL=true

# Development Tools
DEBUG=true
VERBOSE_LOGGING=true
HOT_RELOAD=true