# Database Configuration
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/va_chat"
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=60000
DB_QUERY_TIMEOUT=30000

# JWT Configuration
JWT_ACCESS_SECRET="your-super-secret-jwt-key-change-in-production-256-bits"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-256-bits"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"
JWT_ISSUER="va-chat-app"
JWT_AUDIENCE="va-chat-users"

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"
CORS_CREDENTIALS=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_OFFLINE_QUEUE=false
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"
MAX_FILES_STANDARD=50
MAX_FILES_PREMIUM=500
MAX_STORAGE_STANDARD=104857600
MAX_STORAGE_PREMIUM=1073741824
ALLOWED_MIME_TYPES='["image/jpeg","image/png","image/gif","image/webp","application/pdf","text/plain","text/csv","application/json"]'

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL="noreply@va-chat.com"
SMTP_FROM_NAME="VA Chat Application"
EMAIL_TEMPLATES_DIR="./src/templates/emails"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_TIMEOUT=3600000

# Monitoring Configuration (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090