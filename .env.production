# Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# Application
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database
# For PostgreSQL (recommended for production)
DATABASE_URL="postgresql://username:password@localhost:5432/va_chat?schema=public"
# For SQLite (development only)
# DATABASE_URL="file:./dev.db"

# Redis (for session storage and caching)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# OpenAI API
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# CORS Configuration
CORS_ORIGIN="https://yourdomain.com"
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,text/plain,application/pdf"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
LOG_MAX_SIZE="20m"
LOG_MAX_FILES="14d"

# Security
SESSION_SECRET="your-session-secret-change-in-production-min-32-chars"
BCRYPT_ROUNDS=12
CSRF_SECRET="your-csrf-secret-change-in-production"

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# WebSocket
SOCKET_IO_CORS_ORIGIN="https://yourdomain.com"
SOCKET_IO_TRANSPORTS="websocket,polling"

# Clustering
CLUSTER_ENABLED=true
WORKER_PROCESSES=0

# SSL/TLS (if handling SSL in Node.js)
SSL_ENABLED=false
SSL_CERT_PATH="./ssl/cert.pem"
SSL_KEY_PATH="./ssl/key.pem"

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Feature Flags
FEATURE_VOICE_INPUT=true
FEATURE_FILE_UPLOAD=true
FEATURE_ANALYTICS=true
FEATURE_ADMIN_PANEL=true