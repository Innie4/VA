# API Configuration
VITE_API_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001

# Application Configuration
VITE_APP_NAME="VA Chat"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Enterprise-grade virtual assistant with real-time chat"

# Environment
VITE_NODE_ENV=development

# Features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Socket.IO Configuration
VITE_SOCKET_TIMEOUT=20000
VITE_SOCKET_RECONNECT_ATTEMPTS=5
VITE_SOCKET_RECONNECT_DELAY=1000

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES="image/*,application/pdf,text/*"

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=4000
VITE_TYPING_INDICATOR_TIMEOUT=3000
VITE_MESSAGE_HISTORY_LIMIT=100

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_HIGH_CONTRAST=true